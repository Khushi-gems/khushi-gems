rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Checks if user is admin from Firestore document
    function isAdmin() {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('isAdmin', false) == true;
    }

    // --- Collection Rules ---

    // 1. PRODUCTS - FIXED VERSION WITH STOCK UPDATE PERMISSION
    match /products/{productId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      
      // Allow users to ONLY update stockQuantity during checkout
      allow update: if isAdmin() || (
        isAuthenticated() && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stockQuantity']) &&
        request.resource.data.stockQuantity >= 0
      );
    }
    
    // 2. CATEGORIES
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 3. USERS
    match /users/{userId} {
      // Users can see their own profile
      allow get: if isOwner(userId);
      
      // Users can create their own profile (without admin flag)
      allow create: if isOwner(userId) && 
                       request.resource.data.get('isAdmin', false) == false;
      
      // Users can update their own profile (but not make themselves admin)
      allow update: if (isOwner(userId) && 
                        request.resource.data.get('isAdmin', false) == resource.data.get('isAdmin', false)) 
                        || isAdmin();
      
      // Listing all users - only admins
      allow list: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // 4. ORDERS (Admin Panel Access)
    match /{path=**}/orders/{orderId} {
        allow read, update: if isAdmin();
    }
    
    // 5. ORDERS (Customer Access)
    match /users/{userId}/orders/{orderId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // 6. ORDER ITEMS (Critical for Checkout)
    match /users/{userId}/orders/{orderId}/orderItems/{orderItemId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // 7. WISHLIST
    match /users/{userId}/wishlist/{productId} {
      allow read, write: if isOwner(userId);
    }
  }
}